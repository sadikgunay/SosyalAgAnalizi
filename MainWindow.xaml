<Window x:Class="SocialNetworkGraph.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialNetworkGraph.App"
        mc:Ignorable="d"
        Title="Sosyal Ağ Analizi - Network Graph Analyzer" Height="800" Width="1400" 
        WindowStartupLocation="CenterScreen" Background="#F0F2F5">
	
	<Window.Resources>
		<!-- Modern Button Style -->
		<Style TargetType="Button" x:Key="ModernButton">
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Padding" Value="15,10"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" CornerRadius="6" 
								Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Opacity" Value="0.85"/>
				</Trigger>
			</Style.Triggers>
		</Style>
		
		<!-- Card Style -->
		<Style TargetType="Border" x:Key="CardStyle">
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderBrush" Value="#E1E8ED"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Padding" Value="15"/>
			<Setter Property="Margin" Value="0,0,0,15"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Üst Toolbar -->
		<Border Grid.Row="0" Background="White" BorderBrush="#E1E8ED" BorderThickness="0,0,0,1" Padding="20,15">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				
				<StackPanel Grid.Column="0" Orientation="Horizontal">
					<TextBlock Text="📊" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
					<StackPanel VerticalAlignment="Center">
						<TextBlock Text="Network Graph Analyzer" FontSize="20" FontWeight="Bold" Foreground="#1DA1F2"/>
						<TextBlock Text="Sosyal Ağ Analizi ve Görselleştirme" FontSize="11" Foreground="#657786"/>
					</StackPanel>
				</StackPanel>
				
				<StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
					<Button Name="BtnQuickStart" Content="🚀 Hızlı Başlangıç" Style="{StaticResource ModernButton}" 
							Background="#1DA1F2" Foreground="White" Margin="0,0,10,0" Click="BtnQuickStart_Click"
							ToolTip="Örnek veri seti ile hızlı başlangıç yapın"/>
					<Button Name="BtnLoadSample" Content="📁 Örnek Yükle" Style="{StaticResource ModernButton}" 
							Background="#4CAF50" Foreground="White" Margin="0,0,10,0" Click="BtnLoadGraph_Click"
							ToolTip="CSV dosyasından veri yükleyin"/>
					<Button Name="BtnSave" Content="💾 Kaydet" Style="{StaticResource ModernButton}" 
							Background="#607D8B" Foreground="White" Click="BtnExport_Click"
							ToolTip="Mevcut grafı kaydedin"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Ana İçerik -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="380"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Sol Panel - Basitleştirilmiş -->
			<ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Background="#F7F9FA" Padding="15">
				<StackPanel>
					<!-- Hızlı İşlemler -->
					<Border Style="{StaticResource CardStyle}">
						<StackPanel>
							<TextBlock Text="⚡ Hızlı İşlemler" FontSize="16" FontWeight="Bold" Foreground="#14171A" Margin="0,0,0,12"/>
							
							<TextBlock Text="Kaynak:" FontSize="12" Foreground="#657786" Margin="0,0,0,5"/>
							<TextBox Name="TxtSource" Height="35" FontSize="13" Padding="10" 
									 BorderBrush="#E1E8ED" BorderThickness="1" Margin="0,0,0,10"
									 ToolTip="Başlangıç düğümü"/>
							
							<TextBlock Text="Hedef:" FontSize="12" Foreground="#657786" Margin="0,0,0,5"/>
							<TextBox Name="TxtTarget" Height="35" FontSize="13" Padding="10" 
									 BorderBrush="#E1E8ED" BorderThickness="1" Margin="0,0,0,15"
									 ToolTip="Hedef düğüm"/>
							
							<Button Name="BtnAddConnection" Content="🔗 Bağlantı Ekle" 
									Style="{StaticResource ModernButton}" Background="#1DA1F2" Foreground="White"
									Click="BtnAddEdge_Click" Margin="0,0,0,8"/>
							<Button Name="BtnFindPath" Content="🔍 Yol Bul" 
									Style="{StaticResource ModernButton}" Background="#4CAF50" Foreground="White"
									Click="BtnRunDijkstra_Click"/>
						</StackPanel>
					</Border>

					<!-- Düğüm Yönetimi -->
					<Border Style="{StaticResource CardStyle}">
						<StackPanel>
							<TextBlock Text="👤 Düğüm Yönetimi" FontSize="16" FontWeight="Bold" Foreground="#14171A" Margin="0,0,0,12"/>
							
							<TextBlock Text="İsim:" FontSize="12" Foreground="#657786" Margin="0,0,0,5"/>
							<TextBox Name="TxtAddNodeName" Height="35" FontSize="13" Padding="10" 
									 BorderBrush="#E1E8ED" BorderThickness="1" Margin="0,0,0,10"/>
							
							<Grid Margin="0,0,0,10">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<StackPanel Grid.Column="0" Margin="0,0,5,0">
									<TextBlock Text="Aktiflik" FontSize="11" Foreground="#657786" Margin="0,0,0,3"/>
									<TextBox Name="TxtAddNodeAct" Text="0.5" Height="30" FontSize="12" Padding="8"/>
								</StackPanel>
								<StackPanel Grid.Column="1" Margin="5,0">
									<TextBlock Text="Etkileşim" FontSize="11" Foreground="#657786" Margin="0,0,0,3"/>
									<TextBox Name="TxtAddNodeInt" Text="5" Height="30" FontSize="12" Padding="8"/>
								</StackPanel>
								<StackPanel Grid.Column="2" Margin="5,0,0,0">
									<TextBlock Text="Bağ Say." FontSize="11" Foreground="#657786" Margin="0,0,0,3"/>
									<TextBox Name="TxtAddNodeConn" Text="0" Height="30" FontSize="12" Padding="8"/>
								</StackPanel>
							</Grid>
							
							<Button Name="BtnAddNode" Content="➕ Düğüm Ekle" 
									Style="{StaticResource ModernButton}" Background="#50C878" Foreground="White"
									Click="BtnAddNode_Click" Margin="0,0,0,10"/>
							
							<Button Name="BtnDeleteNode" Content="🗑️ Düğüm Sil" 
									Style="{StaticResource ModernButton}" Background="#E0245E" Foreground="White"
									Click="BtnDeleteNode_Click"/>
						</StackPanel>
					</Border>

					<!-- Analiz Algoritmaları -->
					<Border Style="{StaticResource CardStyle}">
						<StackPanel>
							<TextBlock Text="📈 Analiz Algoritmaları" FontSize="16" FontWeight="Bold" Foreground="#14171A" Margin="0,0,0,12"/>
							
							<Button Name="BtnRunBFS" Content="🔍 BFS - Erişilebilirlik" 
									Style="{StaticResource ModernButton}" Background="#00BCD4" Foreground="White"
									Click="BtnRunBFS_Click" Margin="0,0,0,8"
									ToolTip="Bir düğümden erişilebilen tüm düğümleri bulur"/>
							<Button Name="BtnRunDFS" Content="🕵️ DFS - Derinlemesine" 
									Style="{StaticResource ModernButton}" Background="#9C27B0" Foreground="White"
									Click="BtnRunDFS_Click" Margin="0,0,0,8"
									ToolTip="Derinlemesine arama yapar"/>
							<Button Name="BtnRunDijkstra" Content="🚀 Dijkstra - En Kısa Yol" 
									Style="{StaticResource ModernButton}" Background="#FF9800" Foreground="White"
									Click="BtnRunDijkstra_Click" Margin="0,0,0,8"
									ToolTip="İki düğüm arasındaki en kısa yolu bulur"/>
							<Button Name="BtnRunAStar" Content="⭐ A* - Gelişmiş Yol Bulma" 
									Style="{StaticResource ModernButton}" Background="#FFD700" Foreground="White"
									Click="BtnRunAStar_Click" Margin="0,0,0,8"
									ToolTip="Heuristik kullanarak en kısa yolu bulur"/>
							<Button Name="BtnComponents" Content="🧩 Topluluk Analizi" 
									Style="{StaticResource ModernButton}" Background="#2196F3" Foreground="White"
									Click="BtnComponents_Click" Margin="0,0,0,8"
									ToolTip="Ayrık toplulukları bulur ve renklendirir"/>
							<Button Name="BtnWelshPowell" Content="🎨 Graf Renklendirme" 
									Style="{StaticResource ModernButton}" Background="#E91E63" Foreground="White"
									Click="BtnWelshPowell_Click" Margin="0,0,0,8"
									ToolTip="Komşu düğümleri farklı renklerle boyar"/>
							<Button Name="BtnAnalysis" Content="📊 En Etkili Kullanıcılar" 
									Style="{StaticResource ModernButton}" Background="#4CAF50" Foreground="White"
									Click="BtnAnalysis_Click"
									ToolTip="En yüksek bağlantı sayısına sahip kullanıcıları bulur"/>
						</StackPanel>
					</Border>

					<!-- Dosya İşlemleri -->
					<Border Style="{StaticResource CardStyle}">
						<StackPanel>
							<TextBlock Text="📁 Dosya İşlemleri" FontSize="16" FontWeight="Bold" Foreground="#14171A" Margin="0,0,0,12"/>
							
							<Button Name="BtnLoadJson" Content="📂 JSON Yükle" 
									Style="{StaticResource ModernButton}" Background="#673AB7" Foreground="White"
									Click="BtnLoadJson_Click" Margin="0,0,0,8"/>
							<Button Name="BtnExportJson" Content="💾 JSON Kaydet" 
									Style="{StaticResource ModernButton}" Background="#9C27B0" Foreground="White"
									Click="BtnExportJson_Click" Margin="0,0,0,8"/>
							<Button Name="BtnMatrix" Content="🔢 Komşuluk Matrisi" 
									Style="{StaticResource ModernButton}" Background="#FFC107" Foreground="White"
									Click="BtnMatrix_Click" Margin="0,0,0,8"/>
							<Button Name="BtnClear" Content="🗑️ Temizle" 
									Style="{StaticResource ModernButton}" Background="#F44336" Foreground="White"
									Click="BtnClear_Click"/>
						</StackPanel>
					</Border>
				</StackPanel>
			</ScrollViewer>

			<!-- Sağ Panel - Graf Görselleştirme -->
			<Grid Grid.Column="1" Margin="15">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				
				<!-- Graf Container -->
				<Border Name="GraphContainer" Grid.Row="0" Background="White" 
						BorderBrush="#E1E8ED" BorderThickness="2" CornerRadius="8">
					<Grid>
						<TextBlock Text="📊 Graf görselleştirmesi burada görünecek&#x0a;&#x0a;Üst menüden 'Hızlı Başlangıç' veya 'Örnek Yükle' butonuna tıklayarak başlayın" 
								   HorizontalAlignment="Center" VerticalAlignment="Center" 
								   Foreground="#CCCCCC" FontSize="16" TextAlignment="Center" 
								   TextWrapping="Wrap" Margin="20"/>
					</Grid>
				</Border>
				
				<!-- Bilgi Paneli -->
				<Border Grid.Row="1" Background="#F7F9FA" BorderBrush="#E1E8ED" BorderThickness="1" 
						CornerRadius="6" Margin="0,10,0,0" Padding="15">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>
						
						<ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" MaxHeight="120">
							<TextBlock Name="TxtInfoPanel" Text="ℹ️ Hazır: Hızlı Başlangıç butonuna tıklayarak örnek veri ile başlayabilirsiniz." 
									   FontSize="12" Foreground="#657786" TextWrapping="Wrap"/>
						</ScrollViewer>
						
						<Border Grid.Column="1" Background="White" BorderBrush="#E1E8ED" BorderThickness="1" 
								CornerRadius="6" Padding="12,8" Margin="15,0,0,0">
							<TextBlock Name="TxtStats" Text="📊 0 düğüm | 0 bağlantı" 
									   FontSize="13" FontWeight="Bold" Foreground="#1DA1F2"/>
						</Border>
					</Grid>
				</Border>
			</Grid>
		</Grid>

		<!-- Alt Durum Çubuğu -->
		<Border Grid.Row="2" Background="White" BorderBrush="#E1E8ED" BorderThickness="0,1,0,0" Padding="20,10">
			<TextBlock Text="💡 İpucu: Graf üzerindeki düğümlere tıklayarak detaylı bilgi görebilirsiniz. Algoritmalar için Kaynak ve Hedef kutularını doldurun." 
					   FontSize="11" Foreground="#657786" TextWrapping="Wrap"/>
		</Border>
	</Grid>
</Window>
